{
  "version": 2,
  "installCommand": "npm install --include=dev",
  "buildCommand": "npm run vercel-build",
  "functions": {
    "api/**/*.js": {
      "runtime": "nodejs20.x",
      "memory": 256,
      "maxDuration": 10,
      "includeFiles": [
        "node_modules/.prisma/client/**",
        "prisma/schema.prisma"
      ]
    }
  },
  "headers": [
    {
      "source": "/api/(.*)",
      "headers": [
        { "key": "Cache-Control", "value": "no-store" }
      ]
    }
  ]
}
