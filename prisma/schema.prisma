generator client {
  provider = "prisma-client-js"
}

 datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Warehouse {
  id          String   @id @default(cuid())
  name        String
  location    String
  description String?
  capacity    Int      @default(0)
  width       Int      @default(10)
  length      Int      @default(10)
  height      Int      @default(5)
  gridSize    Int      @default(1)
  shelves     Shelf[]
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([name])
}

model Shelf {
  id          String    @id @default(cuid())
  name        String
  section     String
  level       Int
  capacity    Int       @default(0)
  warehouse   Warehouse @relation(fields: [warehouseId], references: [id], onDelete: Cascade)
  warehouseId String
  items       Item[]
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  @@index([warehouseId])
  @@index([section])
}

model Item {
  id          String   @id @default(cuid())
  name        String
  sku         String   @unique
  description String?
  quantity    Int      @default(0)
  price       Float    @default(0)
  category    String
  shelf       Shelf    @relation(fields: [shelfId], references: [id], onDelete: Cascade)
  shelfId     String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([shelfId])
  @@index([sku])
  @@index([category])
}
